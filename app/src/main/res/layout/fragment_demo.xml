<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DemoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txt_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Message Here"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox android:id="@+id/aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:textColor="@color/black"
        android:onClick="onCheckboxClicked"
        app:layout_constraintTop_toBottomOf="@+id/txt_display"/>

    <CheckBox
        android:id="@+id/bbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="onCheckboxClicked"
        android:text="bbb"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/aaa" />

    <CheckBox
        android:id="@+id/ccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onCheckboxClicked"
        android:text="ccc"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/bbb"
        />

</androidx.constraintlayout.widget.ConstraintLayout>